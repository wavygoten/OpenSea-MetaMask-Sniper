{
  "name": "Sniper Tool",
  "description": "Snipe items on Opensea",
  "manifest_version": 2,
  "version": "1.0.0",
  "icons": {
    "16": "Sharingan.png",
    "48": "Sharingan.png",
    "128": "Sharingan.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "Sharingan.png",
      "48": "Sharingan.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": ["tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://opensea.io/*"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ]
}
